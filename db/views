Task 1 -----------
CREATE VIEW StaffDirectory AS
SELECT name, email FROM staff;

Task 2 -----------
CREATE VIEW product_summary AS
SELECT name, Categories.categoryName, price 
FROM products 
INNER JOIN categories ON products.CategoryID = Categories.ID;

Task 3 -----------
CREATE VIEW lowStockItems AS 
SELECT * FROM Inventory WHERE stockLevel < 10
WITH CHECK OPTION; -- Removed the semicolon after the WHERE clause

Task 4 -----------
CREATE VIEW MonthlyPerformance AS
SELECT salesPersonID, DATE_TRUNC('month', saledate) as month, SUM(amount) 
FROM sales 
GROUP BY month, salesPersonID;
